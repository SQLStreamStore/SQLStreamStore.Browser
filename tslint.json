{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
    "interface-name": [false, "always-prefix"],
    "member-access": false,
    "variable-name": [true, "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "no-submodule-imports": false
  },
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "./**/*.js"
    ]
  }
}